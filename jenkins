pipeline{
    agent any
    stages{
        stage("Build Stage"){
            when{
                changelog 'build'
            }
            steps{
                echo "Yes, change log contains Build Message..."
            }
        }
        stage("Deploy stage"){
            when{
                changelog "Deploy"
            }
        steps{
            echo "This stage will use for Deploy"
        }    
        }
    }
}
